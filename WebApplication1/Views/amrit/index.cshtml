@model List<WebApplication1.Models.employee>

@{
    ViewBag.Title = "index";
    int sn = 0;
}
<a href="@Url.Action("Create")">Add new record</a>
<h2>Data about employee</h2>


<table class="table" border="1" style="color:red">
    <tr>
       <td style="background-color:powderblue">SN</td>
        <td style="background-color:powderblue">ename</td>
        <td style="background-color:powderblue">address</td>
        <td style="background-color:powderblue">Edit</td>
    </tr>

    @foreach (var employee in Model)
    {
        <tr>
            <td>@(++sn)</td>
            <td>@employee.ename</td>
            <td>@employee.eaddress</td>
            <td><a href="@Url.Action("Edit", new { eid = employee.eid })">Edit</a></td>
        </tr>
    }
</table>